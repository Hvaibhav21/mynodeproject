<!-- views/enquiry.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enquiry - Solar Company</title>
</head>
<body style="font-family: Arial, sans-serif; text-align: center; padding: 20px;">
    
    <!-- Header -->
    <h1 style="color: #333;">Contact Us</h1>
    <p>Fill out the form below and we will get back to you as soon as possible.</p>
    
    <!-- Enquiry Form -->
    <form action="/enquiry" method="POST" style="max-width: 400px; margin: auto;">
        <label for="name">Full Name:</label><br>
        <input type="text" id="name" name="name" required style="width: 100%; padding: 8px; margin: 5px 0;"><br>
        
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" required style="width: 100%; padding: 8px; margin: 5px 0;"><br>
        
        <label for="phone">Phone:</label><br>
        <input type="text" id="phone" name="phone" required style="width: 100%; padding: 8px; margin: 5px 0;"><br>
        
        <label for="message">Message:</label><br>
        <textarea id="message" name="message" rows="4" required style="width: 100%; padding: 8px; margin: 5px 0;"></textarea><br>
        
        <button type="submit" style="background-color: #ff9800; color: white; padding: 10px 20px; border: none; cursor: pointer;">Submit</button>
    </form>
    
    <!-- Success Message -->
    <% if (successMessage) { %>
        <p style="color: green; margin-top: 15px;"><%= successMessage %></p>
    <% } %>

    <!-- Footer -->
    <footer style="margin-top: 50px; color: #555;">
        <p>&copy; 2025 Solar Company. All Rights Reserved.</p>
    </footer>
</body>
</html>